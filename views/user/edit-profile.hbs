<title>{{user.fname}}</title>
<div class="container edit-profile">
    {{#if done}}
    <div class="alert alert-success mb-3 mt-3" role="alert">
        {{done}}
    </div>
    {{/if}}
    <h1 class="text-center m-3 title-Acme">{{user.fname}}</h1>
    <form action="/edit-profile/{{user._id}}" method="post">
        <div class="mb-3">
            <label for="fname" class="form-label">First Name</label>
            <input type="text" class="form-control" name="fname" required value="{{user.fname}}">
        </div>
        <div class="mb-3">
            <label for="lname" class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lname" required value="{{user.lname}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" required value="{{user.email}}">
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>